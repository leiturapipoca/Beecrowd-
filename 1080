#include <stdio.h>
 
int main() {
 
    int z,i,maior= 0,posicao= 0;
   
     for(i=1;i<=100;i++){
     scanf("%d", &z);
     if(z>maior){
         maior = z;
         posicao = i;
     }
     if(i == 100){
         printf("%d\n", maior);
         printf("%d\n", posicao);
     }
     
     }
   

    return 0;
}
